@page "{id}"
@model DeleteModel
@{
}

@section Navbar
    {
    <partial name="_CourseClassNavbarPartial" model="@Model.MarkovModel.Assignment.CourseClassId" />
    <partial name="_AssignmentNavbarPartial" model="@Model.MarkovModel.AssignmentId" />
}

<div class="container">
    <div class="row">
        <div class="col-5">
            <form method="post">
                <h1 class="font-weight-bold">
                    Delete Markov Model
                </h1>
                <a asp-page="/Analysis/Markov/Index" asp-route-id="@Model.MarkovModel.AssignmentId" class="text-primary">
                    Back to list
                </a>
                <hr/>
                <div class="form-group mt-3">
                    <h3>Are you sure?</h3>
                </div>
                <div class="form-group">
                    <p class="lead">
                        @await Html.PartialAsync("Shared/_MarkovModelFinishedPartial", Model.MarkovModel)
                    </p>
                </div>
                <div class="form-group">
                    <p class="lead">
                        @Model.MarkovModel.Publish.ToString("dd MMMM yyyy")
                    </p>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-danger">
                        Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>