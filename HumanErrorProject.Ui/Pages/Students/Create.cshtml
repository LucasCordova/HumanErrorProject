@page
@model CreateModel
@{
}

<div class="container">
    <div class="row">
        <div class="col-5">
            <form method="post">
                <h1 class="font-weight-bold">Add Student</h1>
                <a asp-page="/Students/Index" class="text-primary">
                    Back to list
                </a>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group mt-3">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                Name
                            </span>
                        </div>
                        <input asp-for="Student.Name" class="form-control"
                               placeholder="Student's Full Name" />
                    </div>
                    <span asp-validation-for="Student.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                @@
                            </span>
                        </div>
                        <input asp-for="Student.Email" class="form-control"
                               placeholder="Email" />
                    </div>
                    <span asp-validation-for="Student.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        Add
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>