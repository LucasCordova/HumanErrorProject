@page "{id}"
@model DeleteModel
@{
}

<div class="container">
    <div class="row">
        <div class="col-5">
            <form method="post">
                <h1 class="font-weight-bold">Delete Student</h1>
                <a asp-page="/Students/Index" class="text-primary">
                    Back to list
                </a>
                <hr/>
                <div class="form-group mt-3">
                    <h3>
                        Are you sure? This will delete all of student's snapshots.
                    </h3>
                </div>
                <div class="form-group">
                    <p class="lead">
                        @Model.Student.Name
                    </p>
                </div>
                <div class="form-group">
                    <p class="lead">
                        @Model.Student.Email
                    </p>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-danger">
                        Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>