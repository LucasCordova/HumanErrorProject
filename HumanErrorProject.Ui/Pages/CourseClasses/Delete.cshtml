@page "{id}"
@model DeleteModel
@{
}

<div class="container">
    <div class="row">
        <div class="col-5">
            <form method="post">
                <h1 class="font-weight-bold">Delete Class</h1>
                <a asp-page="/CourseClasses/Index" class="text-primary">Back to list</a>
                <hr/>
                <div class="form-group mt-3">
                    <h3>Are you sure?</h3>
                </div>
                <div class="form-group">
                    <p class="lead">
                        @Model.CourseClass.Name
                    </p>
                </div>
                <div class="form-group">
                    <p class="lead">
                        @Model.CourseClass.Term
                    </p>
                </div>
                <div class="form-group">
                    <p class="lead">
                        @Model.CourseClass.Course
                    </p>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-danger">
                        Delete
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>
