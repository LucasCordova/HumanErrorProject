@using Data.Models
@model Data.Models.Snapshot

@await Component.InvokeAsync("SnapshotTestResults", Model)
<div class="container my-5 bg-light py-3 px-5 shadow-sm">
    <div class="mx-auto text-center">
        <h2 class="display-4">
            Method Declarations
        </h2>
    </div>
    <table class="table table-striped table-dark">
        <tbody>
            @foreach (var method in ((SnapshotSuccessReport)Model.Report).SnapshotMethods)
            {
                <tr>
                    <td class="align-middle">
                        @if (method.Declared)
                        {
                            <span class="text-success">
                                Declared
                            </span>
                        }
                        else
                        {
                            <span class="text-danger">
                                Not Declared
                            </span>
                        }
                    </td>
                    <td class="align-middle">
                        <span class="text-capitalize">
                            @method.MethodDeclaration.PreprocessorDirective.ToLower()
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

